<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_unit"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bt_Area"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Area"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bt_Weight"
        android:layout_alignParentTop="true"
        android:text="Weight"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bt_Length"
        android:layout_alignParentTop="true"
        android:text="Lenght"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


    -<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/bt_Area"
    android:layout_marginTop="12dp"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tv_title"
        android:text="Lenght"
        android:gravity="center"
        android:layout_weight="1"/>


    -<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/layout"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_weight="1"
    android:weightSum="1">

    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/spinner_before"
        android:layout_weight="0.4"/>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="100dp"
        android:text="→"
        android:gravity="center"
        android:layout_weight="0.1"
        android:textSize="30dp"/>

    <Spinner
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/spinner_after"
        android:layout_weight="0.4"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:id="@+id/bt_swipe"
        android:text="↔︎"
        android:gravity="center"
        android:layout_weight="0.1"
        android:textSize="18dp"/>

</LinearLayout>


    -<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/layout"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:weightSum="1">


    -<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="0.4">

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/ed_input"
        android:text="1"
        android:gravity="right|center_vertical"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/tv_before_unit"
        android:text="mm"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginLeft="2dp"/>

</LinearLayout>

    <TextView android:layout_height="match_parent"
        android:layout_width="100dp"
        android:text="=" android:gravity="center"
        android:layout_weight="0.2"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    -<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="0.4"
    android:weightSum="1">

    <TextView
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/tv_result"
        android:text="0"
        android:gravity="right|fill_vertical"
        android:layout_weight="0.1"
        android:textColor="#FFFF0000"/>

    <TextView
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:id="@+id/tv_after_unit"
        android:text="cm"
        android:gravity="center_vertical"
        android:layout_weight="0.2"
        android:layout_marginLeft="2dp"/>

</LinearLayout>

</LinearLayout>


    -<GridLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/gridlayout" android:layout_marginTop="16dp"
    android:layout_weight="1" android:columnCount="2">


</GridLayout>

</LinearLayout>

</RelativeLayout>